<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimension_30"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimension_20"
            android:gravity="center"
            android:paddingLeft="@dimen/dimension_30"
            android:paddingRight="@dimen/dimension_30"
            android:text="Alert Message"
            android:textColor="@color/color_255_255_255"
            android:textSize="@dimen/font_size_16" />

        <Button
            android:id="@+id/btn_accept"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimension_button"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dimension_20"
            android:background="@color/color_221_187_0"
            android:gravity="center"
            android:paddingLeft="@dimen/dimension_20"
            android:paddingRight="@dimen/dimension_20"
            android:singleLine="true"
            android:text="@string/ok"
            android:textAllCaps="false"
            android:textColor="@color/color_255_255_255"
            android:textSize="@dimen/dialog_global_buttons_text_size" />

    </LinearLayout>

    <!--<ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:src="@drawable/register_successful" />-->

</FrameLayout>